<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_konsultasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hardy.pakarapel.views.activities.KonsultasiActivity">

    <include
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:id="@+id/topContent"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari gejala ..."
            android:singleLine="true"
            android:padding="@dimen/_8sdp"
            android:background="@color/colorAccent"
            android:id="@+id/txtSearch"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topContent"
        android:layout_above="@+id/btnDiagnosa"
        android:id="@+id/listGejala"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnDiagnosa"
        android:text="Diagnosa Sekarang"/>

</RelativeLayout>
